    "@types/react": "^17.0.9",
    "@types/react-dom": "^17.0.6",
    "@vitejs/plugin-react-refresh": "^1.3.3",
    "cross-env": "^7.0.3",
    "express": "^4.17.1",
    "node-fetch": "^3.0.0-beta.9",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rimraf": "^3.0.2",
    "serve": "^11.3.2",
    "ts-node": "^9.1.1",
    "typescript": "^4.3.2",
    "vite": "^2.3.6",
