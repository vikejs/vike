{
  "compilerOptions": {
    "strict": true,
    "module": "ES2020",
    "moduleResolution": "Bundler",
    "target": "ES2020",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "types": ["vite/client"],
    "skipLibCheck": true,
    "esModuleInterop": true
  },
  "include": [
    "**/*",
    // Include .test* files
    // https://github.com/microsoft/TypeScript/issues/49555
    "**/.*"
  ]
}
