{
  "compilerOptions": {
    // Output
    "target": "ES2020",
    "module": "Node16",
    "outDir": "./dist/",
    "rootDir": "./",
    "declaration": true,
    "noEmitOnError": false,
    // Resolution
    "moduleResolution": "Node16",
    "esModuleInterop": true,
    // Libs
    "lib": ["ES2021", "DOM", "DOM.Iterable"],
    "types": ["vite/client"],
    // Strictness
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    // Misc
    "skipLibCheck": true,
    "noErrorTruncation": true
  },
  "exclude": ["**/*.spec.ts", "./node_modules/", "./dist/"]
}
