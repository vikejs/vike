{
  "compilerOptions": {
    // Misc
    "skipLibCheck": true,
    "noErrorTruncation": true,
    // Strictness
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    // Resolution
    "moduleResolution": "Node16",
    "esModuleInterop": true,
    // Libs
    "lib": ["DOM", "DOM.Iterable", "ES2021"],
    "types": ["vite/client"],
    // Output
    "target": "ES2020",
    "module": "Node16",
    "outDir": "./dist/",
    "rootDir": "./",
    "declaration": true
  },
  "exclude": ["**/*.spec.ts"]
}
